<Application x:Class="TFT_Tracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TFT_Tracker"
             xmlns:viewmodels="clr-namespace:TFT_Tracker.ViewModels"
             xmlns:views="clr-namespace:TFT_Tracker.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ChampViewModel}">
            <views:ChampView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:ItemViewModel}">
            <views:ItemView/>
        </DataTemplate>
    </Application.Resources>
</Application>
